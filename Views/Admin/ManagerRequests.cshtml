@{
ViewData["Title"] = "Admin - Request";
Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="container-fluid">

  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex">
      <h4 class="m-0 font-weight-bold text-primary d-sm-inline-block">List Requests</h4>
      <!-- Topbar Search -->
      <form class="d-none d-sm-inline-block form-inline ml-auto mr-md-3 my-2 my-md-0 mw-100 navbar-search" method="GET" action="/Admin/ManagerRequests">
        <div class="input-group">
          <input type="text" name="Search" class="form-control border-1 small" placeholder="Search for..."
            aria-label="Search" aria-describedby="basic-addon2">
          <div class="input-group-append">
            <button class="btn btn-primary" type="submit">
              <i class="fas fa-search fa-sm"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered mr-auto" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th class="d-inline-block text-truncate" style="width: 44px">#</th>
              <th class="d-inline-block text-truncate" style="width: 179px">Username</th>
              <th class="d-inline-block text-truncate" style="width: 170px">Delivered</th>
              <th class="d-inline-block text-truncate" style="width: 166px">Category</th>
              <th class="d-inline-block text-truncate" style="width: 142px">Budget</th>
              <th class="d-inline-block text-truncate" style="width: 201px">Time create</th>
              <th class="d-inline-block text-truncate" style="width: 132px">Status</th>
            </tr>
          </thead>
          <tbody>
            @if(ViewBag.ListRequests != null)
            {
              int i = 0;
              @foreach(var item in ViewBag.ListRequests)
              {
                i++;
                <tr>
                  <td class="d-inline-block text-truncate" style="width: 44px;">@i</td>
                  <td class="d-inline-block text-truncate" style="width: 179px;">@item.Users.UserName</td>
                  <td class="d-inline-block text-truncate" style="width: 170px;">@item.DeliveredTime</td>
                  <td class="d-inline-block text-truncate" style="width: 166px;">@item.Category</td>
                  <td class="d-inline-block text-truncate" style="width: 142px;">@item.Budget</td>
                  <td class="d-inline-block text-truncate" style="width: 201px;">@item.TimeCreate.ToString("dd/MM/yyyy")</td>
                  @if(item.Status == 1)
                  {
                    <td class="d-inline-block text-truncate" style="width: 132px;">Doing</td>
                  }else
                  {
                    <td class="d-inline-block text-truncate" style="width: 132px;">Done</td>
                  }
                </tr>
              }
            }
          </tbody>
        </table>
        <ul class="pagination pagination-sm justify-content-end">
          <li class="page-item"><a class="page-link" href="#">Previous</a></li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
      </div>
    </div>
  </div>

</div>
<!-- /.container-fluid -->