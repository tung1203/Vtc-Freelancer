@model Category;
@{
ViewData["Title"] = "Edit Category";
Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="container-fluid">

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex">
      <h4 class="m-0 font-weight-bold text-primary d-sm-inline-block">Edit Category</h4>
      <!-- Topbar Search -->
      
    </div>
    <div class="card-body">
      <form method = "POST" action = "/Admin/EditCategory">
  <div class="form-group">
    <label for="exampleInputEmail1">Category Name</label>
    <input type="text" class="form-control" asp-for="CategoryName" value="@ViewBag.CategoryNameEdit" placeholder ="@ViewBag.CategoryNameEdit">
  </div>
  <button class="btn btn-primary">Submit</button>
</form>
    </div>
  </div>
  
</div>
