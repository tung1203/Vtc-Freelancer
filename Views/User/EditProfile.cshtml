@{
ViewData["Title"] = "EditProfile";
}

<div class="text-center">
    <form method="POST" action="/EditProfile">
        <h2>
            Edit Profile
        </h2>
        <br>
        @if (@ViewBag.Noti == true)
        {
        <h5>Tài khoản không tồn tại</h5>
        <br>
        }
        <label>User Name</label>
        <input name="UserName" placeholder="@ViewBag.UserName" /> 
        <label>
            Email
        </label>
        <input name="Email" required placeholder="@ViewBag.Email" />
        <br>
        <label>
            Full Name
        </label>
        <input type="text" name="FullName" required placeholder=" @ViewBag.FullName"/>
        <br>
        <label>
           Address
        </label>
        <input type="text" name="Address"  required placeholder=" @ViewBag.Address" />
        <button id="but" onclick="login()">Đăng Nhập</button>
        <br>
       
    </form>
</div>