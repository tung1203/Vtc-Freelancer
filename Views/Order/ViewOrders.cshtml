                            <td>DELIVERED AT</td>
                            <td>TOTAL</td>
                            <td>NOTE</td>
                            <td>STATUS</td>
                        </tr>
                    </thead>
                    <tbody>
                        @if(@Model != null)
                        {
                        @foreach (var item in Model)
                        {
                        @if (item.WorkStatus == 2)
                        {
                            <tr onclick="window.location.href='/Order?orderId=@item.OrderId'">
                                <td class="date  height95">
                                    @item.Users.UserName
