@model IEnumerable<Vtc_Freelancer.Models.Orders>;
    @{
    ViewData["Title"] = "Manager Orders";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
    }

    <div class="container">

        <div class="order-body">
            <h1 class="mngr-request">Manager Sales</h1>
            <div class="tab" id="tab-request">
                <button class="tab-requests active" onclick="OpenGigs(event, 'New')">NEW</button>
                <button class="tab-requests" onclick="OpenGigs(event, 'Active')">ACTIVE</button>
                <button class="tab-requests" onclick="OpenGigs(event, 'Delivered')">DELIVERED</button>
                <button class="tab-requests" onclick="OpenGigs(event, 'Completed')">COMPLETED</button>
                <button class="tab-requests" onclick="OpenGigs(event, 'Cancelled')">CANCELLED</button>
            </div>
            <div class="wrapper-table-request" id="New" style="display: grid;">
                <table>
                    <thead>
                        <tr>
                            <td>BUYER</td>
                            <td>GIG</td>
                            <td>DUE ON</td>
                            <td>TOTAL</td>
                            <td>NOTE</td>
                            <td>STATUS</td>
                        </tr>
                    </thead>
                    <tbody>

                        @if(@Model != null)
                        {
                        @foreach (var item in Model)
                        {
                        @if (item.WorkStatus == 0)
                        {
                        <tr onclick="window.location.href='/Order?orderId=@item.OrderId'">
                            <td class="date  height95">
                                @item.Users.UserName
                            </td>
                            <td class="text-wide">
                                @item.Service.Title
                            </td>
                            <td class="text-wide">
                                @item.OrderStartTime.AddDays(item.Package.DeliveryTime).ToString("dd/MM/yyyy")
                            </td>
                            <td class="text-wide">
                                $@(item.Package.Price * item.Quantity)
                            </td>
                            <td class="text-wide">
                                @item.ContentRequire
                            </td>
                            <td class="text-wide">
                                ACTIVE
                            </td>
                        </tr>
                        }
                        }
                        }

                    </tbody>
                </table>
            </div>
            <div class="wrapper-table-request" id="Active">
                <table>
                    <thead>
                        <tr>
                            <td>BUYER</td>
                            <td>GIG</td>
                            <td>DUE ON</td>
                            <td>TOTAL</td>
                            <td>NOTE</td>
                            <td>STATUS</td>
                        </tr>
                    </thead>
                    <tbody>

                        @if(@Model != null)
